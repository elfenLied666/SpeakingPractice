<!-- res/layout/fragment_practice_history.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <HorizontalScrollView
        android:id="@+id/filters_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_delete">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Активная метка "All" -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chip_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lbl_act"
                app:strokeWidth="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_chip_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/manrope_medium"
                    android:text="@string/all"
                    android:textColor="@color/lbl_act_text"
                    android:textSize="@dimen/sp11"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/chip_words"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/chip_background_inactive"
                android:backgroundTint="@color/lbl_no_act_full"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/words_chip_ttl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.App.ChipTextStyle"
                    android:text="@string/words"
                    android:textStyle="bold"
                    android:fontFamily="@font/manrope_medium"
                    android:alpha="0.4"
                    android:textColor="@color/lbl_no_act_text"
                    android:textSize="@dimen/sp11"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/words_chip_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/ic_chip_circle"
                    android:backgroundTint="@color/lbl_mini_circle_no_act"
                    style="@style/Widget.App.ChipTextStyle"
                    android:gravity="center"
                    android:text="4"
                    android:alpha="0.28"
                    android:textColor="@color/lbl_mini_text_no_act"
                    android:textSize="@dimen/sp8"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chip_sentences"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/chip_background_inactive"
                android:backgroundTint="@color/lbl_no_act_full"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/sentences_chip_ttl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.App.ChipTextStyle"
                    android:alpha="0.4"
                    android:text="Sentences"

                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp11"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/sentences_chip_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/ic_chip_circle"
                    android:backgroundTint="@color/lbl_mini_circle_no_act"
                    style="@style/Widget.App.ChipTextStyle"
                    android:alpha="0.28"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp8"
                    tools:ignore="SmallSp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Иконка редактирования -->
    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:src="@drawable/ic_edit_square"
        app:layout_constraintBottom_toBottomOf="@+id/filters_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/filters_scroll"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/icon_edit"
        app:layout_constraintEnd_toStartOf="@+id/icon_edit"
        app:layout_constraintTop_toTopOf="@+id/icon_edit"
        tools:ignore="ContentDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/filters_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    